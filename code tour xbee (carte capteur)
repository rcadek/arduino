
int tour;
String toto;


void setup() {
  Serial1.begin(9600);
  Serial.begin(4800);
 
  tour = -1;
  toto = "toto";
 
}

void loop() {
    Serial.println("debut");
    //Serial1.available() > 0
    if(Serial1.readString() == "E" ) {
        Serial.println("if");
    
       
           
        tour=tour+1;
        Serial.println("tour(s) : ");
        Serial.println(tour);
    
        Serial1.print("a");
   delay(3000);
              
  }      
    
}

  
